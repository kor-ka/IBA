<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="wrap_content">

	<LinearLayout
		
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:orientation="vertical"
		>
<!-- 
/////Glass + Ice
///////////////// -->
		<AutoCompleteTextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="glass here"
			android:id="@+id/guessGlassEt"/>

		<AutoCompleteTextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="ice here"
			android:id="@+id/guessIceEt"/>

		<View
			android:layout_height="1dp"
			android:background="?android:attr/dividerVertical"
			android:layout_width="match_parent"/>
<!-- 
//////Topping
////////////// -->
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:id="@+id/guessToppingsLay">

			<AutoCompleteTextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="topping here"
				android:id="@+id/guessToppingEt"/>

		</LinearLayout>

		<ImageButton
			android:layout_height="wrap_content"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_width="match_parent"
			android:src="@drawable/content_new"
			android:background="#C5C5C5"
			android:id="@+id/guessAddToping"
			android:layout_margin="5dp"/>

		<View
			android:layout_height="1dp"
			android:background="?android:attr/dividerVertical"
			android:layout_width="match_parent"/>
<!-- 
///////method
////////////// -->

<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:id="@+id/guessMethodLay">

			<AutoCompleteTextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="method here"
				android:id="@+id/guessMethodEt"/>

		</LinearLayout>

		<ImageButton
			android:layout_height="wrap_content"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_width="match_parent"
			android:src="@drawable/content_new"
			android:background="#C5C5C5"
			android:id="@+id/guessAddMethod"
			android:layout_margin="5dp"/>

		<View
			android:layout_height="1dp"
			android:background="?android:attr/dividerVertical"
			android:layout_width="match_parent"/>
		
		<!-- 
///////ingrs
////////////// -->

<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:id="@+id/guessIngrLay">
			
			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal">
				<AutoCompleteTextView
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:hint="method here"
					android:id="@+id/guessIngrEt"
					android:layout_weight="1"/>
				<AutoCompleteTextView
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:hint="cl here"
					android:id="@+id/guessClEt"
					android:layout_weight="1"/>				
			</LinearLayout>

		</LinearLayout>

		<ImageButton
			android:layout_height="wrap_content"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_width="match_parent"
			android:src="@drawable/content_new"
			android:background="#C5C5C5"
			android:id="@+id/guessAddIngr"
			android:layout_margin="5dp"/>

		<View
			android:layout_height="1dp"
			android:background="?android:attr/dividerVertical"
			android:layout_width="match_parent"/>
		
	<!-- 
	//////DONE!
	///////////// -->	
		<Button
			android:id="@+id/guessDone"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Done!"/>

	</LinearLayout>

</ScrollView>

